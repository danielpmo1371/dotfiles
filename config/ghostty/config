# Ghostty Configuration

# Window transparency - 0.75 means 75% opaque (25% transparent)
background-opacity = 0.75

# Scrolling keybinds
# Page scrolling (standard terminal keybinds)
keybind = shift+page_up=scroll_page_up
keybind = shift+page_down=scroll_page_down

# Line scrolling for precise control
#keybind = shift+up=scroll_line_up
#keybind = shift+down=scroll_line_down

# Jump to top/bottom of scrollback
keybind = shift+home=scroll_to_top
keybind = shift+end=scroll_to_bottom

# Alternative vim-style scrolling
keybind = ctrl+u=scroll_page_up
keybind = ctrl+d=scroll_page_down

# Configure Option key as Meta for tmux prefix
macos-option-as-alt = true

# ─────────────────────────────────────────────────────────────────────────────
#   Map Command+⟨key⟩ → Ctrl+⟨key⟩ for letters, digits, punctuation
# ─────────────────────────────────────────────────────────────────────────────
keybind = super+a=text:\x01
keybind = super+b=text:\x02
keybind = super+c=text:\x03
keybind = super+d=text:\x04
keybind = super+e=text:\x05
keybind = super+f=text:\x06
keybind = super+g=text:\x07
keybind = super+h=text:\x08
keybind = super+i=text:\x09
keybind = super+j=text:\x0A
keybind = super+k=text:\x0B
keybind = super+l=text:\x0C
keybind = super+m=text:\x0D
keybind = super+n=text:\x0E
keybind = super+o=text:\x0F
keybind = super+p=text:\x10
keybind = super+q=text:\x11
keybind = super+r=text:\x12
keybind = super+s=text:\x13
keybind = super+t=text:\x14
keybind = super+u=text:\x15
#keybind = super+v=text:\x16
keybind = super+w=text:\x17
keybind = super+x=text:\x18
keybind = super+y=text:\x19
keybind = super+z=text:\x1A
keybind = super+1=text:\x11
keybind = super+2=text:\x12
keybind = super+3=text:\x13
keybind = super+4=text:\x14
keybind = super+5=text:\x15
keybind = super+6=text:\x16
keybind = super+7=text:\x17
keybind = super+8=text:\x18
keybind = super+9=text:\x19
keybind = super+0=text:\x10
keybind = super+`=text:\x00
keybind = super+-=text:\x0D
#keybind = super+==text:\x1D
#keybind = super+.=text:\x0E
#keybind = super+/=text:\x0F
#keybind = super+'=text:\x07
#keybind = super+;=text:\x1B
#keybind = super+,=text:\x0C

# Note: Command+E sends Ctrl+E (\x05) for tmux prefix (defined above in super+e)


# Backslash - for nvim Claude Code toggle
keybind = super+backslash=text:\x1c

# Suspend process (SIGTSTP)
keybind = ctrl+z=text:\x1A
keybind = super+z=text:\x1A

# ─────────────────────────────────────────────────────────────────────────────
#   Tmux Window/Session Navigation with Cmd+Shift+h/j/k/l
# ─────────────────────────────────────────────────────────────────────────────
# Map Cmd+Shift+hjkl to escape sequences for Shift+Arrow keys
keybind = super+shift+h=text:\x1b[1;2D   # Shift+Left
keybind = super+shift+l=text:\x1b[1;2C   # Shift+Right
keybind = super+shift+j=text:\x1b[1;2B   # Shift+Down
keybind = super+shift+k=text:\x1b[1;2A   # Shift+Up
